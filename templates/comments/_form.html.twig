{{ form_start(form) }}
    {% set formErrors = form.vars.errors.form.getErrors(true) %}
        {% if formErrors|length %}
            <div class="alert-red">
                <ul>
                    {% for error in formErrors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
{{ form_widget(form.text_comment) }}
<div>
<button class="btn ">{{ button_label|default('Отправить') }}</button></div>
{{ form_end(form) }}