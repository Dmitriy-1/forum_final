{{ form_start(form) }}

 {% set formErrors = form.vars.errors.form.getErrors(true) %}
        {% if formErrors|length %}
            <div class="alert">
                <ul>
                    {% for error in formErrors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

<p class="new__p">Заголовок</p>
{{ form_widget(form.title_topic) }}
<p class="new__p">Текст</p>
{{ form_widget(form.text_topic) }}
<p class="new__p">Раздел</p>
{{ form_widget(form.section_topic) }}
<div style="margin-top: 10px">
<button class="btn btn__style">{{ button_label|default('Сохранить') }}</button>
</div>
{{ form_end(form) }}
